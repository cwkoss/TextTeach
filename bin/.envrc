PROJECT=textteach
PROJ_DIR="$(dirname $BIN_DIR)"

ENV_DIR="$PROJ_DIR/ttenv"
AE_DIR="$ENV_DIR/appengine"
AE_BIN="$AE_DIR/google_appengine"

if [ `uname` == "Darwin" ]; then
    PLATFORM="Mac"
elif [[ `uname` == *W32* ]]; then
    PLATFORM="Windows"
else
    PLATFORM="Linux"
fi
